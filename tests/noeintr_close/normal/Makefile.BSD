# Program name.
PROG	=	test_noeintr_close_normal

# Don't install it.
NOINST	=	1

# Library code required
LDADD_REQ	=	-lpthread

# Useful relative directories
LIBCPERCIVA_DIR	=	../../..
NOEINTR_CLOSE_SHARED	=	..

# Main test code
SRCS	=	main.c

# Shared test code for noeintr_close()
.PATH.c :	${NOEINTR_CLOSE_SHARED}
SRCS	+=	open_close.c
IDIRS	+=	-I${NOEINTR_CLOSE_SHARED}

# libcperciva includes
IDIRS	+=	-I${LIBCPERCIVA_DIR}/util

# Linking library-dependent functions
.PATH.c :	${LIBCPERCIVA_DIR}/util
SRCS	+=	noeintr_close_normal.c
IDIRS	+=	-I${LIBCPERCIVA_DIR}/util

# Special test-only define
CFLAGS.noeintr_close_normal.c=	-DNOEINTR_CLOSE_TESTING

.include <bsd.prog.mk>
